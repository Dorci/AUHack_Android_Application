<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/gym"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/gym"
                android:text="@string/gymButtonText"
                android:textSize="50sp" />

            <Button
                android:id="@+id/canteen"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/canteen"
                android:text="@string/canteenButtonText"
                android:textSize="50sp" />

            <Button
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/chat"
                android:text="@string/chatButtonText"
                android:textSize="50sp" />

            <Button
                android:id="@+id/game"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/friend"
                android:onClick="openActivityFindingGame"
                android:text="@string/gameButtonText"
                android:textSize="50sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>